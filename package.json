{
  "name": "prismabun",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "prisma generate && bun build src/index.ts --compile --outfile server"
  },
  "dependencies": {
    "hono": "^4.9.9",
    "prisma": "^6.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
