  "name": "prismabun",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "postinstall": "prisma generate",
    "build": "prisma generate && bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "hono": "^4.9.9",
    "prisma": "^6.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
